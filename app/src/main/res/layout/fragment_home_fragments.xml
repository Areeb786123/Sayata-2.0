<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragments"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Guest"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:textStyle="normal"
        android:id="@+id/greetings"
        android:fontFamily="@font/amaranth"
        android:layout_marginTop="10dp"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="36dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pin"
                    android:scaleType="centerCrop"

                    android:layout_height="36dp"></ImageView>


                <TextView
                    android:layout_width = "wrap_content"
                    android:textColor="@color/black"
                    android:text="Location"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="110dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/imageView1"
                        android:src="@drawable/areeb"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </androidx.cardview.widget.CardView>

            </LinearLayout>




        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Your Statics"

            android:fontFamily="@font/amaranth"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:foregroundTint="@color/black"
            android:elevation="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="12dp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="110dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:lottie_rawRes="@raw/water"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginBottom="30dp"
                android:layout_height="100dp"
                ></com.airbnb.lottie.LottieAnimationView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"

                android:layout_marginLeft="180dp"


                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Your Current Score"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="14dp"
                    android:text="Your Current Score 512"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/amaranth"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/amaranth"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        android:elevation="8dp"
                        android:layout_marginBottom="20dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            >

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                app:lottie_rawRes="@raw/magni"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true">

                            </com.airbnb.lottie.LottieAnimationView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="6.8 magnitude"
                                android:textSize="16dp"
                                android:layout_marginTop="15dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#3C713E"
                                ></TextView>
                        </LinearLayout>





                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        android:elevation="8dp"
                        android:layout_marginBottom="20dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            >

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                app:lottie_rawRes="@raw/flood"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true">

                            </com.airbnb.lottie.LottieAnimationView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="6.8 magnitude"
                                android:textSize="16dp"
                                android:layout_marginTop="15dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#3C713E"
                                ></TextView>
                        </LinearLayout>





                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        android:elevation="8dp"
                        android:layout_marginBottom="20dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            >

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                app:lottie_rawRes="@raw/cyclone"
                                app:lottie_autoPlay="true"
                                app:lottie_loop="true">

                            </com.airbnb.lottie.LottieAnimationView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="6.8 magnitude"
                                android:textSize="16dp"
                                android:layout_marginTop="15dp"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textColor="#3C713E"
                                ></TextView>
                        </LinearLayout>





                    </androidx.cardview.widget.CardView>





                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"

            android:fontFamily="@font/amaranth"
            android:layout_marginTop="10dp"></TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent"
            android:id="@+id/homeRecycler"
            android:layout_marginBottom="100dp"
            ></androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>

    </ScrollView>







</LinearLayout>